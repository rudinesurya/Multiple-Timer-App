<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Multiple_Timer_App.ViewModels"
             x:Class="Multiple_Timer_App.Views.TimerDetailPage"
             Title="{Binding Timer.Title}">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     Spacing="20">
            <!-- Editable Title -->
            <Entry Text="{Binding EditedTitle}"
                   FontSize="24"
                   Placeholder="Enter timer title"
                   HorizontalOptions="Center" />
            <Label Text="{Binding Timer.RemainingTime}"
                   FontSize="48"
                   HorizontalOptions="Center" />
            <Editor Text="{Binding EditedReminderNote}"
                    Placeholder="Enter a custom reminder note"
                    HeightRequest="100" />
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center"
                         Spacing="20">
                <Button Command="{Binding TogglePauseCommand}">
                    <Button.Triggers>
                        <!-- Show Pause icon if running -->
                        <DataTrigger TargetType="Button"
                                     Binding="{Binding Timer.IsRunning}"
                                     Value="true">
                            <Setter Property="Text"
                                    Value="Pause" />
                        </DataTrigger>
                        <!-- Show Play icon if paused -->
                        <DataTrigger TargetType="Button"
                                     Binding="{Binding Timer.IsRunning}"
                                     Value="false">
                            <Setter Property="Text"
                                    Value="Play" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>

                <Button Text="Restart"
                        Command="{Binding RestartTimerCommand}" />

                <Button Text="Save"
                            Command="{Binding SaveChangesCommand}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
