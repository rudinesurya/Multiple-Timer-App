<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Multiple_Timer_App.Views.AddTimerPage"
             Title="Add Timer">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="20">

            <Entry Placeholder="Title"
                   Text="{Binding Title}" />

            <Label Text="Select Duration"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <HorizontalStackLayout HorizontalOptions="Center">
                <VerticalStackLayout>
                    <Label Text="Hours"
                           HorizontalOptions="Center" />
                    <Picker ItemsSource="{Binding HourOptions}"
                            SelectedItem="{Binding SelectedHour, Mode=TwoWay}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Minutes"
                           HorizontalOptions="Center" />
                    <Picker ItemsSource="{Binding MinuteOptions}"
                            SelectedItem="{Binding SelectedMinute, Mode=TwoWay}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Seconds"
                           HorizontalOptions="Center" />
                    <Picker ItemsSource="{Binding SecondOptions}"
                            SelectedItem="{Binding SelectedSecond, Mode=TwoWay}" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Editor Placeholder="Reminder Note"
                    HeightRequest="100"
                    AutoSize="TextChanges"
                    Text="{Binding ReminderNote}" />

            <Button Text="Add Timer"
                    Command="{Binding AddTimerCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
